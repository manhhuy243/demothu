@{
    Layout = null;
}
@model SystemWebUI.Models.LoginViewModel
@using SystemWebUI.Migrations;
<!DOCTYPE html>
<style>
    body {
        background: url(../images/bg-login.jpg) no-repeat !important;
    }
     .account .logo-login {
         display: block;
         margin: 60px auto 60px;
         width: 250px;
     }

    .account .account-wall {
        margin-top: 20px;
    }
    .form-signin input {
        font-size: 16px;
    }
    .account .btn.btn-lg {
        font-size: 16px !important;
        padding: 12px 48px 12px !important;
        font-weight: bold;
    }
    .text-login {
        text-align: center;
        font-family: Arial;
        font-size: 2.4em;
        font-weight: bold;
        color: white;
        line-height: 150%;
    }

    .div-captcha {
        width: 10px;
    }

    .text-lienhe {
        font-family: Arial;
        color: white;
        margin-top: 30px;
    }

    .text-email {
        padding-left: 60px;
    }

    .text-phattrien {
        text-align: center;
        font-family: Arial;
        color: white;
        font-size: 16px;
        line-height: 150%;
    }

    .legend_input {
        box-sizing: border-box;
        width: 40px;
        height: 40px;
    }

    .username, .password {
        height: 40px !important;
        margin-bottom: 0 !important;
    }
    .account a {
        font-size: 16px !important;
        text-decoration: none !important;
    }
</style>
<html>
<head>
    <meta charset="utf-8">
    <title>Đăng nhập hệ thống - Phần mềm khảo sát</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="" name="description" />
    <meta content="themes-lab" name="author" />
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
    <link href="~/Content/backend/style.css" rel="stylesheet">
    <link href="~/Content/backend/ui.css" rel="stylesheet">
    <link href="~/Content/plugins/bootstrap-loading/lada.min.css" rel="stylesheet">
</head>
<body class="account separate-inputs boxed" data-page="login" style="background: url(../images/bg-login.jpg) no-repeat !important; background-size: cover !important;">
    <!-- BEGIN LOGIN BOX -->
    <div class="container" id="login-block">
        <div class="row">
            <div class="col-sm-8 col-md-8 col-md-offset-2 col-sm-offset-2">
                <img src="~/Images/logo-syt-hcm.png" class="logo-login" />
                <div class="text-login">
                    SỞ Y TẾ THÀNH PHỐ HỒ CHÍ MINH <br />
                    PHẦN MỀM KHẢO SÁT
                </div>
            </div>
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 ">
                <div class="account-wall">
                    <i class="user-img icons-faces-users-03"></i>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin", role = "form", }))
                    {
                        <div class="input-group m-b-10">
                            <div class="input-group-addon legend_input"><i class="icon-user"></i></div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-white username", placeholder = "Tên đăng nhập" })
                        </div>
                                <div class="input-group m-b-10">
                                    <div class="input-group-addon legend_input">
                                        <i class="icon-lock"></i>
                                    </div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-white password", placeholder = "Mật khẩu" })
                                </div>

                        if (Model != null && !Model.Result)
                        {
                            <div class="alert media fade in alert-danger" style="border-radius: 5px; margin-top: 5px; font-size: 12px; color: #900;">
                                <p>Tên đăng nhập hoặc mật khẩu không đúng.</p>
                                @Html.ValidationSummary(false, "")
                            </div>

                            //Session["loginCount"] = (int)SessionManager.ReturnSessionObject("loginCount") + 1;
                            //if ((int)Session["loginCount"] > 4)
                            //{
                                @*@Html.Captcha(exampleCaptcha)
                                    @Html.TextBox("CaptchaCode")*@
                            //}
                        }

                        <button type="submit" id="submit-form" class="btn btn-lg btn-primary btn-block ladda-button" data-style="expand-left">Đăng nhập</button>
                    }
                </div>
            </div>

        </div>

    </div>
    <footer>
        <div class="row" style="margin: 60px 0 20px;">

            <div class="text-phattrien">
                Bản quyền: Sở Y Tế - Thành phố Hô Chí Minh<br />
                Địa chỉ: 59 Nguyễn Thị Minh Khai, Quận 1, Thành phố Hồ Chí Minh<br />

                Phát triển bởi <a href="http://csc.edu.vn" style="color: #ffffff; text-decoration: underline" target="_blank">Trung Tâm Tin Học - ĐH Khoa Học Tự Nhiên Tp.HCM</a>
            </div>
        </div>

    </footer>
    <script src="~/Content/Plugins/jquery/jquery-1.11.1.min.js"></script>
    <script src="~/Content/plugins/jquery/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Content/plugins/gsap/main-gsap.min.js"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.min.js"></script>
    @*<script src="~/Content/plugins/backstretch/backstretch.min.js"></script>*@
    <script src="~/Content/plugins/bootstrap-loading/lada.min.js"></script>
    <script src="~/Scripts/pages/login-v1.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</body>
</html>